#!/bin/sh
set -e

echo "Pre-Installation Macro"

case "$1" in
	install)
		if [ -f __PACKAGE_DIR__/config/settings.cfg ]; then
			echo -n "Preserving local configuration before upgrade..."
			dpkg-divert --add --package localdev --rename --divert /tmp/localdev.settings.cfg __PACKAGE_DIR__/config/settings.cfg
		fi
		;;
	upgrade)
		echo -n "Stopping service localdev ..."
		systemctl stop localdev || true
		echo " OK"
		echo ""
		if [ -f __PACKAGE_DIR__/config/settings.cfg ]; then
			echo -n "Preserving local configuration before upgrade..."
			dpkg-divert --add --package localdev --rename --divert /tmp/localdev.settings.cfg __PACKAGE_DIR__/config/settings.cfg
		fi
		;;
	abort-upgrade)
	;;
	*)
		echo "Pre-Installation Macro called with unknown argument \`$1'" >&2
		exit 1
		;;
esac

exit 0
